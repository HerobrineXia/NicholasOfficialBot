ENVIRONMENT=prod
HOST=0.0.0.0
PORT=8080
COMMAND_START=["/"]
COMMAND_SEP=["-"]
DRIVER=~fastapi+~httpx+~websockets

# QQ
QQ_IS_SANDBOX=true

# ChatGPT
CHATGPT__NAME="ChatGPT"
CHATGPT__DESCRIPTION="基于OpenAI GPT模型的聊天机器人"
CHATGPT__USAGE=""
CHATGPT__COMMANDS='
{
  "ChatGPT": {
    "prefix": "帮帮忙",
    "description": "与ChatGPT聊天",
    "aliases": ["bbm"],
    "args": [
      {
        "description": "聊天内容",
        "required": true
      }
    ]
  }
}'

CHATGPT__MODEL="gpt-4o"
CHATGPT__PRESET="你是一个乐于助人的助手"

# Dice
DICE__NAME="Dice"
